<%= form_with(model: flyer, local: true) do |form| %>
  <% if flyer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flyer.errors.count, "error") %> prohibited this flyer from being saved:</h2>

      <ul>
      <% flyer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :project_id%>
    <%= form.collection_select(:project_id, Project.all, :id, :name, {:prompt => 'Select a Project', :selected => @flyer.project_id.to_i}) %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {:prompt => 'Select a Category', :selected => @flyer.category_id.to_i}) %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost %>
  </div>

  <div class="field">
    <%= form.label :info %>
    <%= form.text_area :info %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time %>
  </div>

  <div class="field">
    <%= form.label :date_of_event %>
    <%= form.date_select :date_of_event %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
