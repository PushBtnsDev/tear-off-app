<p id="notice"><%= notice %></p>
<%stylesheet_link_tag 'profiles'%>

<p>
  <%if @profile.uploaded_image.attached?%>
    <%= image_tag @profile.uploaded_image.service_url, class: 'image-size'%>
  <%else%>
    <%= "No image uploaded"%>
  <%end%>
</p>

<p>
  <strong>City:</strong>
  <%= @profile.city %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @profile.bio %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user.username %>
</p>

<div class = "tears-grid">
  <strong>MY TEARS</strong><br>
  
  <%@attended_flyer.each do |flyer|%>
  <div class = "tears">
    <p>Title:<br> <%=flyer.title%> </p>  
    <p>Information:<br><%=flyer.info%></p>  
    <p>Time of Event:<br><%=flyer.time%></p>  
    <p>Date of Event: <br><%=flyer.date_of_event%> </p>  
    <p>Location: <br><%=flyer.address%></p>
  </div>
  <%end%>
</div>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
